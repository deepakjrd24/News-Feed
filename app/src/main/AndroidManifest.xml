<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deepak.newsfeed">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.deepak.newsfeed.ReadLaterActivity"/>
        <activity android:name="com.deepak.newsfeed.CategoryNewsActivity" />
        <activity android:name="com.deepak.newsfeed.CategorySelectActivity" />
        <activity android:name="com.deepak.newsfeed.CountrySelectActivity" />
        <activity android:name="com.deepak.newsfeed.MyAccountActivity" />
        <activity android:name="com.deepak.newsfeed.AboutActivity" />
        <activity android:name="com.deepak.newsfeed.WeatherActivity" />
        <activity android:name="com.deepak.newsfeed.NotesActivity" />
        <activity android:name="com.deepak.newsfeed.NotesEditorActivity" />
        <activity android:name="com.deepak.newsfeed.DisplayNewsActivity" />
        <activity android:name="com.deepak.newsfeed.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>